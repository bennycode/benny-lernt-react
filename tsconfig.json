{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es7"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src/main",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "dist",
    "src/**/*.test.ts",
    "node_modules"
  ]
}
